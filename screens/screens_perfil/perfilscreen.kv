<PerfilScreen>:
    name: "informacoes"

    MDScreen:

        BoxLayout:
            orientation: 'vertical'
            MDIconButton:
                icon: "arrow-left"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color 
                pos_hint: {'x': .9}
                on_release: sm.current = 'perfis'
            MDFillRoundFlatButton:
                text: "INFORMAÇÕES"
                size_hint_x: 0.6
                center_x: 0.5
                pos_hint: {'center_x': 0.5,'center_y': 0.9}
            MDFloatLayout:
                size: root.width, root.height
                MDCard:
                    size_hint: None, None
                    size: "350dp", "150dp"
                    radius: 20
                    pos_hint:{"x": 0.1, "y": 0.70}
