                        icon: "account-circle"
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color
                        size_hint_x: .3
                        font_size: "100sp"                    
                    GridLayout:
                        cols:2
                        size_hint_x: .7
                        
                        MDLabel:
                            text: "TEMPERATURA"
                            font_size: 12
                        MDLabel:
                            text: "POTENCIA"
                            font_size: 12
                        MDLabel:
                            text: "VELOCIDADE DO MOTOR"
                            font_size: 12
                        MDLabel:
                            text: "TEMPO"
                            font_size: 12
