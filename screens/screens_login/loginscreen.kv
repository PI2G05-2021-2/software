#:import utils kivy.utils
<LoginScreen>:

    name: 'direcao'
    MDScreen:
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.6
            center_x: 0.5
            pos_hint: {'center_x': 0.5,'center_y': 0.9}
            Image:
                source: 'screens/screens_empresa/logo.png'
                size_hint_y: None
                height: 150
            MDFlatButton:
                text: "EMPRESA"
                theme_text_color: "Custom"
                text_color: 0, 0, 1, 1
                on_press: root.manager.current = 'homeempresa'
            MDFlatButton:
                text: "LABORATORIO"
                theme_text_color: "Custom"
                text_color: 0, 0, 1, 1
                on_release:  root.manager.current = 'perfis'
            MDTextField:
                hint_text: "Usu√°rio"
                mode: "rectangle"
                size_hint_x: .7
                pos_hint: {'y': .1, "center_x": .5}
            MDTextField:
                hint_text: "Senha"
                mode: "rectangle"
                size_hint_x: .7
                pos_hint: {'y': .1, "center_x": .5}
            MDFillRoundFlatButton:
                text: "ENTRAR"
                size_hint_x: 0.6
                center_x: 0.5
                pos_hint: {'center_x': 0.5,'center_y': 0.1}
                on_release: root.manager.current = ''
            
