#:import utils kivy.utils
<LoginScreen>

    name: 'direcao'
    MDScreen:
        BoxLayout:
            orientation: 'vertical'
            pos_hint: {'x': 0.4,'y': 0.5}
            MDFlatButton:
                text: "EMPRESA"
                theme_text_color: "Custom"
                text_color: 0, 0, 1, 1
                on_press: root.manager.current = 'perfis'
            MDFlatButton:
                text: "LABORATORIO"
                theme_text_color: "Custom"
                text_color: 0, 0, 1, 1
                on_release:  root.manager.current = 'perfis'

<LaboratorioScreen>:
