<RegistroEmpresaScreen>:
    name: 'registro'

    MDScreen:
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            MDLabel:
                text: 'REGISTRO DE VENDA'
                halign: 'center'
                pos_hint: { 'y': .4}
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color 
            MDTextField:
                id: nmComprador
                hint_text: "Nome do Comprador"
                mode: "rectangle"
                size_hint_x: .7
                pos_hint: {'y': .10, "center_x": .5}
            MDTextField:
                id: telComprador
                hint_text: "Telefone do Comprador"
                mode: "rectangle"
                size_hint_x: .7
                pos_hint: {'y': .9, "center_x": .5}
            MDTextField:
                id: identComprador
                hint_text: "Identificador do Comprador"
                mode: "rectangle"
                size_hint_x: .7
                pos_hint: {'y': .8, "center_x": .5}
            MDTextField:
                id: crmSol
                hint_text: "CRM do Solicitante"
                mode: "rectangle"
                size_hint_x: .7
                pos_hint: {'y': .7, "center_x": .5}
            MDTextField:
                id: nmSol
                hint_text: "Nome do Solicitante"
                mode: "rectangle"
                size_hint_x: .7
                pos_hint: {'y': .6, "center_x": .5}
            MDTextField:
                id: telSol
                hint_text: "Telefone do Solicitante"
                mode: "rectangle"
                size_hint_x: .7
                pos_hint: {'y': .5, "center_x": .5}
            MDTextField:
                id: cidComprador
                hint_text: "CID"
                mode: "rectangle"
                size_hint_x: .7
                pos_hint: {'y': .4, "center_x": .5}
            MDTextField:
                id: enderecoVenda
                hint_text: "Endere√ßo"
                mode: "rectangle"
                size_hint_x: .7
                pos_hint: {'y': .2, "center_x": .5}
            MDTextField:
                id: loteVenda
                hint_text: "Lote"
                mode: "rectangle"
                size_hint_x: .7
                pos_hint: {'y': .1, "center_x": .5}
            MDFillRoundFlatButton:
                text: "CANCELAR"
                size_hint_x: 0.6
                center_x: 0.5
                pos_hint: {'center_x': 0.5,'center_y': 0.2}
                on_release: root.manager.current = 'homeempresa'
            MDFillRoundFlatButton:
                text: "SALVAR"
                size_hint_x: 0.6
                center_x: 0.5
                pos_hint: {'center_x': 0.5,'center_y': 0.1}
                on_release: root.manager.current = app.novaVenda(nmComprador.text,telComprador.text,identComprador.text,crmSol.text,nmSol.text,telSol.text,cidComprador.text,enderecoVenda.text,loteVenda.text)